@using ProgressCapture.Web.ViewModels
@using ProgressCapture.Web.Models

@model ProgressUploadViewModel

<div class="container">
    <div class="card mt-4">
        <div class="card-header">
            <h2 class="m-0">Upload Progress</h2>
        </div>
        <div class="card-body">
            <form asp.action="UploadToLibrary" method="post" enctype="multipart/form-data">
                <div class="form-content d-flex flex-column">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="p-4">
                        <div class="input-group">
                            <input asp-for="File" class="form-control" />
                            <span asp-validation-for="File" class="text-danger"></span>
                        </div>
                        <div class="mt-3">
                            <a asp-route="upload-template">Download template</a>
                        </div>
                    </div>
                    <div class="form-group border-top pt-3">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
